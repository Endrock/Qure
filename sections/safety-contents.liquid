        },
        {
            "type": "text-1",
            "name": "Saftey content middle",
            
            "settings": [
              {
                "type":"text",
                "id":"content-number-1",
                "label":"Content Number"
              },
              {
                "type":"text",
                "id":"content-text-1",
                "label":"Content Text"
              },
              {
                "type":"url",
