<section class="customized">
<span class="customized-incl">{{ section.settings.title }}</span>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="customized-title">
        <h2>{{ section.settings.heading }}</h2>
        {{ section.settings.content }}
      </div>
      <div class="customized-info">
        {% for block in section.blocks %}
        <div class="customized-detail">
          <div class="vitamin-img">
         {% if forloop.first %}
             <img src="//www.qureskincare.com/cdn/shop/files/microbottle-serum-4ml-02_7.png?v=1690462977">
          {% else %}
             <img src="{{ block.settings.image | img_url:'large' }}">
          {% endif %}
          {% if block.settings.image !=blank %}
           
          {% endif %}  
            <div class="vitamin-title">
              <h2>{{ block.settings.title }}</h2>
            </div>
          </div>
          <div class="vitamin-icon">
            <span class="top-title">{{ block.settings.sub_cus }}</span>
            <h6>{{ block.settings.sub_heading }}</h6>
          <p class="type">{{ block.settings.cus_con }}</p>
          <p class="con-title">{{ block.settings.sub_titles }}</p>
            <ul>
              {% for i in(1..4) %}
                {% capture image %}after_{{ i }}{% endcapture %}
                {% capture text %}text_{{ i }}{% endcapture %}

              {% assign img = block.settings[image] %}
              {% assign content = block.settings[text] %}
                {% if img !=blank %}  
                  <li>
                    <span class="icon">
                    <img src="{{ img | img_url:'small' }}">
                    </span>
                    
                    {% if content !=blank %}
                    <span class="icon-txt">{{ content }}</span>
                    {% endif %}  
                  </li>
                {% endif %}  
              {% endfor %}  
            </ul>
          </div>
          <div class="con-acc">
             {% for i in(1..3) %}
                {% capture befor %}befor_{{ i }}{% endcapture %}
                {% capture Content %}content_{{ i }}{% endcapture %}

              {% assign title = block.settings[befor] %}
              {% assign text = block.settings[Content] %}
            <div class="set">
              <a href="#" class="" rel="noindex nofollow">
                {{ title }} <i class="fa fa-plus"></i>
              </a>
              {% if text !=blank %}
              <div class="content">
               {{ text }}
              </div>
              {% endif %}   
            </div>
             {% endfor %} 
          </div>
        </div>
        {% if block.settings.or_and !=blank %}
        <span class="customized-and">{{ block.settings.or_and }}</span>
        {% endif %} 
        {% endfor %}
      </div>
    </div>
  </div>
</div>
</section>
