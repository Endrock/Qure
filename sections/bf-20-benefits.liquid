<div class="bf-benefits-wrapper">
  <div class="bf-benefits__title-wrapper">
    <div class="bf-benefits__img-wrapper mobile-view">
      <img class="bf-benefits__img" src="{{ section.settings.img-1 | img_url:"master" }}">
    </div>
    <h3 class="bf-benefits__title">{{ section.settings.title }}</h3>
    <div class="bf-benefits__text dekstop">{{ section.settings.text }}</div>
    <div class="bf-benefits__text mobile">{{ section.settings.text-mob }}</div>
  </div>
  <div class="bf-benefits__content">
    <div class="bf-benefits__img-wrapper dekstop">
