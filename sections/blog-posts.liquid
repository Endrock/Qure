
{%- assign blog = blogs[section.settings.blog] -%}

<div class="section-blog-slides generic-slider-block">
  <div class="container">
    <h2 class="g-canela-heading">{{ section.settings.title | escape }}</h2>
    <p class="blog-sub-heading">{{ section.settings.subtitle }}</p>
    <div class="blog-carousel-slider">
      {% for article in blog.articles limit: section.settings.post_limit %}
      <div class="blog-slides-item">
        {% include 'blog-grid' %}
      </div>
          
      {% endfor %} 
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Blog posts",
    "class": "blog",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured products"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Sub heading",
        "default": "Lorem ipsum dolor sit amet."
      },
      {
        "id": "blog",
        "type": "blog",
        "label": "Blog"
      },
      {
        "type": "range",
        "id": "post_limit",
        "label": "Posts",
        "min": 3,
        "max": 12,
        "step": 3,
        "default": 3
      },
      {
        "id": "blog_view-all",
        "type": "url",
        "label": "View all URL"
      }
    ],
    "presets": [
      {
        "name": "Blog posts",
        "category": "Blog",
        "settings": {
          "blog": "News",
          "post_limit": 3
        }
      }
    ]
  }
{% endschema %}
