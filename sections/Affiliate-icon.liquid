<section class="Affiliate-icon">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>{{section.settings.headline}}</h2>
        <div class="Affiliate-icon-content">
          {% for block in section.blocks %}
          <div class="icon-details">
            <div class="icon-aff">
              <img src="{{ block.settings.image_1 | img_url: 'master'}}" alt="icon">
            </div>
            <p>{{block.settings.title}}</p>
          </div>
          {% endfor %} 
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
"name": "Icon-text",
"settings": [

{
"type": "text",
"id": "headline",
"label": "Heading"
}
],
"blocks": [
{
"type": "icon",
"name": "Icon",

"settings": [
{
"type": "image_picker",
"id": "image_1",
"label": "Image"  
},
{
"type":"text",
"id":"title",
"label":"Title"

}

]
}
]
}
{% endschema %}
