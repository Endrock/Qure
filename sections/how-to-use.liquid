{% schema %}
{
    "name" : "How to use",
    "tag" : "section",
    "class" : "how-to-use-area",
    "settings" : [
        {
            "type" : "text",
            "id" : "title",
            "label" : "Title",
            "default" : "How To Use "
        },
        {
            "type" : "text",
            "id" : "text",
            "label" : "Text",
            "default" : "5 Minutes Total, Every 2-4 Weeks"       
        },
        {
            "type" : "url",
            "id" : "video",
            "label" : "Video"      
        }
    ],
    "blocks" : [
        {
            "type" : "item",
            "name" : "Item",
            "settings" : [
                {
                    "type" : "image_picker",
                    "id" : "img",
                    "label" : "Image"        
                },
                {
                    "type" : "text",
                    "id" : "title",
                    "label" : "Title",
                    "default" : "Step 01"        
                },
                {
                    "type" : "richtext",
                    "id" : "text",
                    "label" : "Text"   
                }
            ]
        }
    ],
    "presets" : [{
        "name" : "How to use"
    }]
}
{% endschema %}