<section class="key-fact">
<span class="key-inc">{{ section.settings.heading }}</span>
<div class="key-content">
  <h2>{{ section.settings.heading1 }}</h2>
    {{ section.settings.content }}
  <ul>
    {% for i in(1..3) %}
     {% capture text %}image_text_{{ i }}{% endcapture %}
     {% assign text_con = section.settings[text] %} 
       {% if text_con !=blank %}
        <li>{{ text_con }}</li>
       {% endif %} 
     {% endfor %} 
  </ul>
</div>
<div class="custom_booster">
{% for block in section.blocks  %}  
<div class="booster">
  <div class="boos-img">
    <div class="img-div">
     {% if forloop.first %}
             <img src="//www.qureskincare.com/cdn/shop/files/microbottle-serum-4ml-02_7.png?v=1690462977">
          {% else %}
      <img src="{{ block.settings.image | img_url:'large' }}">
          {% endif %}
  {% if block.settings.image !=blank %}
     
    {% endif %}
  </div>
  <div class="con-div">
  <h3>{{ block.settings.title }}</h3>
   <h5>{{ block.settings.sub_heading }}</h5>
  </div>    
</div>
  <div class="concern">
    <ul>
      {% for i in(1..4) %}
        {% capture svg %}after_{{ i }}{% endcapture %}
        {% capture text %}text_{{ i }}{% endcapture %}
      {% assign svg_icon = block.settings[svg] %}
      {% assign content = block.settings[text] %}
        {% if svg_icon !=blank %}  
          <li>
            <span class="icon">
            {{ svg_icon }}
            </span>
            {% if content !=blank %}
            <span class="icon-txt">{{ content }}</span>
            {% endif %}  
          </li>
        {% endif %}  
      {% endfor %}  
    </ul>
  </div>
  <div class="con-acc">
    {% for i in(1..3) %}
      {% capture befor %}befor_{{ i }}{% endcapture %}
      {% capture Content %}content_{{ i }}{% endcapture %}
      {% assign title = block.settings[befor] %}
      {% assign text = block.settings[Content] %}
    <div class="set">
      <a href="javascript:;?_ga=2.195358891.643149399.1654586288-1281481098.1654586210" class="">
        {{ title }} <i class="fa fa-plus"></i>
      </a>
      {% if text !=blank %}
        <div class="content">
         {{ text }}
        </div>
      {% endif %} 
    </div>
    {% endfor %} 
  </div>
</div>
{% if block.settings.or_and !=blank %}
<span class="or-title">{{ block.settings.or_and }}</span>
{% endif %}
{% endfor  %}
</div>
</section>
