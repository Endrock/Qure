<div class="want-to-learn">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <h2>{{ section.settings.title }}</h2>
        <p>{{ section.settings.content }}</p>
      </div>
    </div>
    <div class="row">

      {% for article in blogs[section.settings.blog].articles  limit:1%}
      <div class="col-md-4">
        <div class="want-learn">
          <a href="{{ article.url }}">  <img src="{{ article | img_url: 'master'}}"></a>
          <div class="want-cntent">
            <a href="{{ article.url }}"> <h2>{{ article.title }}</h2></a>
            {%- if article.excerpt.size > 0 -%}
            {{ article.excerpt }}
            {%- else -%}
            {{ article.content | strip_html | truncate: 150 }}
            {%- endif -%}
            <a href="{{ article.url }}">Read article</a>
          </div>
        </div>
      </div>
      {%- endfor -%}
      <div class="col-md-8">
