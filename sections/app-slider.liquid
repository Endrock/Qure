<section class="app-slider-section">
  <div class="owl-carousel owl-theme">

    {% for block in section.blocks %}
    <div class="slider-info item">
      <h2>{{ block.settings.title }}</h2>
      <div class="sldier-image">
        <img src="{{block.settings.prd_img | img_url:'master' }}" alt="">
      </div>
    </div>
    {% endfor %}
  </div>
  <div class="new-sections">
    <div class="col-md-12 mobile-show">
      <div class="new-info">
        <div class="icon-sldier">

          {% for block in section.blocks %}
          <div>
            <div class="icons-image">
              <img src="{{block.settings.prd_img | img_url:'master' }}" alt="">
            </div>
            <div class="icons-content">
              <h2>{{ block.settings.title }}</h2>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  $('#shopify-section-app-slider .owl-carousel').owlCarousel({
    stagePadding: 425,
    loop: true,
    margin: 10,
    nav: false,
    autoplay:true,
    autoplayTimeout:2000,
    dots:false,
    responsive:{
      0:{
        items:1
      },
      600:{
        items:1,
        stagePadding: 150
      },
      991:{
        items:1,
        stagePadding: 300
      },
      1199:{
        items:1,
        stagePadding: 425
      }
    }
  })
</script>
{% schema %}
{
"name": "Logo Section",
"settings": [],

"blocks": [
{
"type": "text",
"name": "Slider",
"settings": [

{
"id": "prd_img",
"type": "image_picker",
"label": "Choose Logo"
},
{
"id": "title",
"type": "text",
"label": "Main Title"
}

]
}
]

}
{% endschema %}
