{% if section.settings.image_first !=blank %}
<span class="bg-img">
  <img src="{{ section.settings.image_first | img_url:'large' }}">
</span>
{% endif %}  
<section class="tramtment tramtment-2">
  <div class="supply">
    {% if section.settings.image !=blank %}
    <img src="{{ section.settings.image | img_url:'large' }}" class="supp-img">
    {% endif %}  
    <div class="month-title">
      {% if section.settings.best_offer !=blank %}
      <span class="best">{{ section.settings.best_offer }}</span>
      {% endif %}

      {% if section.settings.first_month_heading !=blank %}
      <h3>{{ section.settings.first_month_heading }}</h3>
      {% endif %}  
     
      {{ section.settings.content }}
      {% if section.settings.content_c !=blank %}
      <span class="world">{{ section.settings.content_c }}</span>
      {% endif %}  
    </div>
    <div class="supply-price">
      <div class="price-detail">
        <div class="all-price"> 
          <span class="dis-price">{{ section.settings.price_first }}</span>
          <span class="og-price">{{ section.settings.price_second }}</span>
          <span class="save-price">{{ section.settings.you_save }}</span>
        </div>
        <p>{{ section.settings.text }}</p>
        <p class="check"><b>Choose <img src="https://cdn.shopify.com/s/files/1/0441/1431/3365/files/Group-46-_1.png?v=1654846116"> at checkout</b></p>
      </div>
    </div>
    <div class="choose">
      {{ section.settings.text_cus }}
      <div class="dropdown">
        {% if section.settings.button !=blank %}
        <a href="{{ section.settings.button | default:'#' }}" class="js-link">
          {{ section.settings.button }} <i class="fa fa-chevron-down"></i></a>
        {% endif %}  
        <ul class="js-dropdown-list">
          {% for i in (1..3) %}
           {% capture option %}options_{{ i }}{% endcapture %}                                 
           {% assign value = section.settings[option]%}
            
            {% if value !=blank %}
              <li>{{ value }}</li>
            {% endif %}  
          {% endfor %}
        </ul>
      </div>
    </div>
    <div class="sup-btn">
      {% if section.settings.button_cus !=blank %}
      <a href="{{ section.settings.link_cus | default:'#' }}">{{ section.settings.button_cus }} 
        <span class="btns__arrow">
        {{ section.settings.button_svg }}
        </span>
      </a>
      {% endif %}
      {% if section.settings.text_cus_svg !=blank %}
      <span class="gur">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M14.1679 1L7.58395 7.5957C7.20995 7.9707 6.99997 8.47781 6.99997 9.00781V19C6.99997 20.105 7.89497 21 8.99997 21H17.9922C18.7912 21 19.514 20.5241 19.83 19.7891L22.8379 12.7871C22.9449 12.5381 23 12.269 23 11.998V10C23 8.895 22.105 8 21 8H14.6484L15.5859 3.70312C15.7319 3.03312 15.5222 2.33356 15.0332 1.85156L14.1679 1ZM0.999969 9V21H4.99997V9H0.999969Z" fill="#4F937D"></path>
        </svg>
        {{ section.settings.text_cus_svg }}
      </span>
      {% endif %}  
    </div>
  </div>
</section>
