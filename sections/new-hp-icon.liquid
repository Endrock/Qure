<div class="container">
  <div class="hp-icons-wrapper">
    {% for block in section.blocks %}
      <div class="hp-icons__item">
        <div class="hp-icons__img-wrapper">
          {% if block.settings.icon_svg == blank %}
            <img class="hp-icons__img" src="{{block.settings.icon_img |img_url: 'master'}}" alt="icon">
          {% else %}
            {{ block.settings.icon_svg }}
          {% endif %}
        </div>
        <div class="hp-icons__text">{{ block.settings.text }}</div>
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
 {
   "name": "Buy icons section",
   "class": "hp-icons-section",
   "settings": [],
      "blocks": [
    	{
        "type": "icon",
        "name": "Icon",
        "settings": [
            {
                "type":"image_picker",
                "id":"icon_img",
                "label": "Icon"
            },
            {
                "type":"html",
                "id":"icon_svg",
                "label": "Icon SVG"
            },
            {
                "type":"richtext",
                "id":"text",
                "label": "Text"
            }
        ]
    }
],
   "presets": [
     {
     "name": "New Hp Icon",
     "category": "Icon"
     }
   ]
 }
{% endschema %}
