<script>
  $(".steps .slider-btn").click(function() {
    $('html, body').animate({
      scrollTop: $(".landing-treatment").offset().top
    }, 3000);
  });
</script>

<style>
    .qure-list p:before {
        content: url({{'Group-1777.svg' | asset_url}});
    }
          .qure-item .verify-img img {
    width: 30px;
    object-fit: cover;
}
</style>

{% schema %}
{
    "name" : "Qure's System",
    "tag" : "section",
    "class" : "qure-area",
    "max_blocks" : 3,
    "settings" : [
        {
            "type" : "richtext",
            "id" : "title",
            "label" : "Title",
            "default" : "<p>Qure’s 2-In-1 System Isn’t Like Any Other At-Home Needling Treatment</p>"
        },
        {
            "type" : "textarea",
            "id" : "text",
            "label" : "Text"        
        }
    ],
    "blocks" : [
        {
            "type" : "item",
            "name" : "Item",
            "settings" : [
                {
                    "type" : "image_picker",
                    "id" : "img",
                    "label" : "Image"        
                },
               {
                    "type" : "richtext",
                    "id" : "text",
                    "label" : "Text"        
                },
               {
                    "type" : "richtext",
                    "id" : "img-before",
                    "label" : "Image Before Text"        
                },
                {
                    "type" : "richtext",
                    "id" : "img-after",
                    "label" : "Image After Text"        
                },
                {
                    "type" : "image_picker",
                    "id" : "contry_img",
                    "label" : "Image"        
                },
                 {
                    "type" : "text",
                    "id" : "contry",
                    "label" : "verify-txt",
                    "default" : "Mica A."      
                },
                {
                    "type" : "text",
                    "id" : "percent",
                    "label" : "Percent",
                    "default" : "93%"      
                },
                {
                    "type" : "text",
                    "id" : "list_title",
                    "label" : "list Title",
                    "default" : "Fine Lines & Blemishes"      
                },
                {
                    "type" : "richtext",
                    "id" : "list",
                    "label" : "list Text",
                    "default" : "<p>Fine Lines & Blemishes</p>"      
                }
            ]
        }
    ],
    "presets" : [{
        "name" : "Qure's System"
    }]
}
{% endschema %}