<div class="qure-system">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-top">
                    <h3 class="section-title">
                        {{section.settings.title}}
                    </h3>
                    <div class="section-text">
                        <p>
                            {{section.settings.text}}
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row qure-items">
            {% for block in section.blocks %}
            {%- assign b = block.settings -%}
            <div class="col-lg-4 col-12">
                <div class="qure-item">
                    <div class="qure-image">
                        <img src="{{b.img | img_url: 'master'}}" class="qure-img" alt="img">
                      <span class="img-before">{{b.img-before}}</span>
                      <span class="img-after">{{b.img-after}}</span>
                    </div>
                    <div class="qure-content">
                        <div class="slick-verify">
                          <div class="verify-img">
                            <img src="{{b.contry_img | img_url: 'master'}}" alt="img">
                            <span class="verify-txt">{{b.contry}}</span>
                          </div>
                          <div class="verify-mark">
                            <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 6C12 5.1273 11.5041 4.3656 10.7802 3.981C10.9779 3.2277 10.7853 2.3901 10.1973 1.8024C9.7584 1.3632 9.18 1.1448 8.601 1.1448C8.4051 1.1448 8.2092 1.1697 8.0187 1.2198C7.6344 0.4959 6.8727 0 6 0C5.1273 0 4.3656 0.4959 3.981 1.2198C3.7902 1.1697 3.5946 1.1448 3.3987 1.1448C2.8197 1.1448 2.2416 1.3635 1.8024 1.8024C1.2147 2.3901 1.0218 3.2274 1.2195 3.981C0.4959 4.3656 0 5.1273 0 6C0 6.8727 0.4959 7.6344 1.2198 8.019C1.0221 8.7723 1.2147 9.6099 1.8027 10.1976C2.2416 10.6365 2.82 10.8552 3.399 10.8552C3.5949 10.8552 3.7908 10.8303 3.9813 10.7802C4.3656 11.5041 5.1273 12 6 12C6.8727 12 7.6344 11.5041 8.019 10.7802C8.2098 10.8303 8.4054 10.8552 8.6013 10.8552C9.1803 10.8552 9.7584 10.6365 10.1976 10.1976C10.7853 9.6099 10.9782 8.7726 10.7805 8.019C11.5041 7.6344 12 6.8727 12 6Z" fill="#008763"></path>
                            <path d="M5.24349 8L3 6.05419L3.85576 5.31208L5.24349 6.51525L8.14424 4L9 4.74211L5.24349 8Z" fill="white"></path>
                            </svg>
                            <span class="mark-text">Verified Customer</span>
                          </div>
                        </div>
                        <div class="qure-text">
                            <span class="parcent">{{b.percent}}</span> 
                            <span class="qure-txt">{{b.text}}</span>
                        </div>
                        <div class="qure-list-title">
                            <h5>{{b.list_title}}</h5>
                        </div>
                        <div class="qure-list">
                            {{b.list}}
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

<script>
