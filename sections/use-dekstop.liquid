$('.cus-tabing').removeClass('clicked-1');
$('.cus-tabing').removeClass('clicked-3');
$('.cus-tabing').removeClass('clicked-4');
$('.cus-tabing').addClass('clicked-2');
});
$('.tabl-3').click(function(){
$('.cus-tabing').removeClass('clicked-1');
$('.cus-tabing').removeClass('clicked-2');
$('.cus-tabing').removeClass('clicked-4');
$('.cus-tabing').addClass('clicked-3');
});
$('.tabl-4').click(function(){
$('.cus-tabing').removeClass('clicked-1');
$('.cus-tabing').removeClass('clicked-2');
$('.cus-tabing').removeClass('clicked-3');
$('.cus-tabing').addClass('clicked-4');
});
</script>

