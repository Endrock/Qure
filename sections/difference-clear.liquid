                    "label" : "Text"        
                },
                {
                    "type" : "radio",
                    "id" : "check",
                    "label" : "Check",
                    "options": [
                        {
                        "value": "check",
                        "label": "Check"
                        },
                        {
                        "value": "cross",
                        "label": "Cross"
                        }
                    ],
                    "default": "check"   
                }
            ]
        },
        {
            "type" : "right",
            "name" : "Right",
            "settings" : [
                {
                    "type" : "text",
                    "id" : "title",
                    "label" : "Text"        
                },
                {
                    "type" : "radio",
                    "id" : "check",
                    "label" : "Check",
                    "options": [
                        {
                        "value": "check",
                        "label": "Check"
                        },
                        {
                        "value": "cross",
                        "label": "Cross"
                        }
                    ],
                    "default": "check"   
                }
            ]
        }
    ],
    "presets" : [{
        "name" : "Difference Clear"
    }]
}
{% endschema %}