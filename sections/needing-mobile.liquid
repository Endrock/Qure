<span class="compare-vs">VS</span>
<section class="needing">
  {% if section.settings.image !=blank %}
  <img src="{{ section.settings.image | img_url:'large' }}">
  {% endif %}
  {% if section.settings.heading !=blank %}
  <h2>{{ section.settings.heading }}</h2>
  {% endif %}  
  <ul>
    {% for block in section.blocks %}
      {% if block.settings.content !=blank %}
        <li>{{ block.settings.content }}</li>
      {% endif %}
    {% endfor %}
    
  </ul>
</section>
{% schema %}
  {
    "name": "Needing Mobile",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    
    "blocks":[
      {
        "type": "text",
        "name": "Content",
        "settings":[
          {
            "type": "textarea",
            "id": "content",
            "label": "Content"
          }
        ]
      }
    ]
  }
{% endschema %}