<div class="daily-use">
  <div class="dailycontainer">
    <div class="row">
      <div class="col-md-12">
        <div class="daily-info">
          <h2>{{ section.settings.mn_txt }}</h2>
        </div>
      </div>   
    </div>
    <div class="row mobile-hide">
      <div class="col-md-4">
        <div class="main-datail">
          <div class="main-text">
            <h2>{{ section.settings.mn_txt_1}}</h2>
            <p>{{ section.settings.mn_con_1}}</p>
          </div>
          <div class="main-image">
            <img src="{{ section.settings.bts_img_1 | img_url:'master' }}" alt="">
          </div>
        </div>
      </div>
     <div class="col-md-4">
        <div class="main-datail">
          <div class="main-text">
            <h2>{{ section.settings.mn_txt_2}}</h2>
            <p>{{ section.settings.mn_con_2}}</p>
          </div>
          <div class="main-image">
            <img src="{{ section.settings.bts_img_2 | img_url:'master' }}" alt="">
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="main-datail">
          <div class="main-text">
            <h2>{{ section.settings.mn_txt_3}}</h2>
            <p>{{ section.settings.mn_con_3}}</p>
          </div>
          <div class="main-image">
            <img src="{{ section.settings.bts_img_3 | img_url:'master' }}" alt="">
          </div>
        </div>
      </div>
    </div>
    <div class="row mobile-show">
      <div class="swiper-container mySwiper">
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            <div class="main-datail">
              <div class="main-text">
                <h2>{{ section.settings.mn_txt_1}}</h2>
            <p>{{ section.settings.mn_con_1}}</p>
              </div>
              <div class="main-image">
                <img src="{{ section.settings.bts_img_1 | img_url:'master' }}" alt="">
              </div>
            </div>
          </div>
          <div class="swiper-slide">
            <div class="main-datail">
              <div class="main-text">
                <h2>{{ section.settings.mn_txt_2}}</h2>
            <p>{{ section.settings.mn_con_2}}</p>
              </div>
              <div class="main-image">
                <img src="{{ section.settings.bts_img_2 | img_url:'master' }}" alt="">
              </div>
            </div>
          </div>
          <div class="swiper-slide">
            <div class="main-datail">
              <div class="main-text">
                 <h2>{{ section.settings.mn_txt_3}}</h2>
            <p>{{ section.settings.mn_con_3}}</p>
              </div>
              <div class="main-image">
                <img src="{{ section.settings.bts_img_3 | img_url:'master' }}" alt="">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="popup-btn">
      <div id="test-popup" class="white-popup mfp-hide">
        <h2>{{ section.settings.d_pop_tlt }}</h2>
        {{ section.settings.d_pop_cont }}
      </div>
      <a href="#test-popup" class="open-popup-link">{{ section.settings.disclaimer_tx }}<img src="https://cdn.shopify.com/s/files/1/0441/1431/3365/files/Group_502.png?v=1622025966" alt=""></a>
    </div>
  </div>
</div>

