  <section class="buzz-sec">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="buzz-heading">
            <h2>{{ section.settings.heading }}</h2>
          </div>
          <div class="buzz-cont">
            {{ section.settings.text }}
          </div>
          {% if section.settings.image !=blank %}
          <img src="{{ section.settings.image | img_url:'large' }}" class="buzz-img">
          {% endif %}  
          <div class="banne-fetaure">
            <h4>{{ section.settings.title }}</h4>
            <ul>
              {% for block in section.blocks %}
                {% if block.settings.img !=blank %}  
                  <li>
                    <img src="{{ block.settings.img | img_url:'large' }}">
                  </li>
                {% endif %}
              {% endfor %}  
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
{% schema %}
  {
    "name": "Section Buzz Mobile",
    "settings": [
      {
        "type": "text",
        "id":"heading",
        "label": "Heading Label"
      },
      {
        "type": "richtext",
        "id":"text",
        "label": "Text Label"
      },
      {
        "type": "image_picker",
        "id":"image",
        "label": "Image"
      },
      {
        "type": "text",
        "id":"title",
        "label": "Heading Label"
      }
    ],
    "blocks":[
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id":"img",
            "label": "Image"
          }
        ]
      }
    ],
    "presets":[
      {
      "name": "Section Buzz Mobile"
      }
    ]
  }
{% endschema %}