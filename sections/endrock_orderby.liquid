<div class="orderby-receiveby hidden">
  <div class="orderby-receiveby__today">
    {% render 'endrock_icon-package' %}
    <span class="orderby-receiveby__today-text">{{ section.settings.today_text }}</span>
    {% render 'endrock_icon-arrow-right' %}
  </div>
    <div class="orderby-receiveby__dates">
    {% render 'endrock_icon-truck' %}
    <span class="orderby-receiveby__shipping-text">
    </span>
  </div>
</div>
  
<script>
  window.nationalText = '{{ section.settings.national_text }}';
  window.internationalText = '{{ section.settings.international_text }}';
  window.stateDeliveryRange = [
    {% for block in section.blocks %}
      {
        stateAcronym: '{{ block.settings.state_acronym | downcase }}',
        deliveryRange: '{{ block.settings.delivery_range }}'
      },
    {% endfor %}
  ];
</script>

