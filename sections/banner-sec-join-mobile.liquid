<section class="banner-sec banner-sec-2">
    {% if section.settings.heading !=blank %}
      <h2>{{ section.settings.heading }}</h2>
      {% endif  %}
      <img src="https://cdn.shopify.com/s/files/1/0441/1431/3365/files/1661796194838-02_1_1.png?v=1675340408" class="sec-2-img">
    <div class="bullet-info">
      <ul class="bullet-detail">
        {% for i in (1..3) %}
            {% capture text %}text_{{ i }}{% endcapture %}
            {% assign custom_text = section.settings[text] %}

            {% if custom_text !=blank %}
            <li>
              <span class="sec-2-svg"></span>
              {{ custom_text }}
              </li>
          
           {% endif %}
          {% endfor %}
      </ul>
      {% if section.settings.new_img !=blank %}
      <span class="new-img"><img src="{{ section.settings.new_img | img_url:'small' }}" alt="icon"></span>
      {% endif %}
    <img src="https://cdn.shopify.com/s/files/1/0441/1431/3365/files/Group_155_1.png?v=1675341569" class="sec-2-images">
    {% if section.settings.button !=blank %}  
      <a href="javascript:void(0)" class="slider-btn" rel="noindex nofollow">{{ section.settings.button }}<span class="btns__arrow">
        <svg width="10" height="16" viewBox="0 0 10 16" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M1 1L8 8L1 15" stroke="white" stroke-width="2"></path>
        </svg>
        </span>
      </a>
    {% endif %}
    <div class="custom-shipping">
      <ul>
        {% for i in (1..2) %}
          {% capture icon_svg %}svg_{{ i }}{% endcapture %}
          {% capture icon_text %}icon_text_{{ i }}{% endcapture %}
          {% capture url %}icon_url_{{ i }}{% endcapture %}

          {% assign icon_svg_content = section.settings[icon_svg] %}
          {% assign text_content = section.settings[icon_text] %}
          {% assign link = section.settings[url] %}
        <li>
          {% if icon_svg_content !=blank %}
            <span class="ship-icon">
              {{  icon_svg_content }}
            </span>
          {% endif  %}
          <span class="ship-icon"></span>
          {% if text_content !=blank %}
            <span class="ship-text">
              <a href="{{ link | default:'javascript:void(0)' }}" class="link-mobile{{ forloop.index }}">{{ text_content }}</a>
            </span>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
    </div>
    <div class="banner-payment">
      <ul>
        <li>
          <img src="https://cdn.shopify.com/s/files/1/0441/1431/3365/files/Group_1510.png?v=1680701672">
        </li>
      </ul>
    </div>
  </section>
