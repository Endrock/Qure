<div class="land-container" id="landingReviews">
  <div class="land-text__title-wrapper">
    <h2 class="landing-title reviews__title">{{section.settings.title}}</h2>
  </div>
  <div class="reviews-wrapper">
    {%for block in section.blocks%}
    <div class="reviews__item">
      <div class="review__inner-top">
        <div class="review__country">
          <img class="review__country-img" src="{{block.settings.image |img_url: 'master'}}">
        </div>
        <div class="review__country-title">
          <span class="review__country--author">{{block.settings.author}}<em class="desktop-wrapper">,</em></span>
          <span class="review__country--text">{{block.settings.country}}</span>
        </div>
      </div>
      <div class="review__inner-bottom">
        <div class="review__item-title">{{block.settings.title}}</div>
        <div class="review__item-text">{{block.settings.text}}</div>
      </div>
      <div class="review__rating-wrapper">
        <div class="review__rating-stars">
          <svg width="132" height="21" viewBox="0 0 132 21" fill="none" xmlns="http://www.w3.org/2000/svg">
