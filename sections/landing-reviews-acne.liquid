        <div class="review__rating-number"><span>{{block.settings.rating_num}}/5</span></div>
      </div>
    </div>
    {%endfor%}
  </div>
</div>

<style>
  .reviews__item {
    height: {{section.settings.card_height}}px !important;
  }
  @media (max-width:767px) {
    .reviews-wrapper {
      height: {{section.settings.card_height_mob}}px;
    }
    .reviews__item {
      height: {{section.settings.card_height_mob}}px !important;
    }
  }
  @media (max-width:374px) {
    .reviews-wrapper .reviews__item {
      height: {{section.settings.card_height_mob | plus: 40}}px !important;
    }
    .reviews-wrapper{
      height: {{section.settings.card_height_mob | plus: 40}}px !important;
    }
  }
</style>


{% schema %}
  {
    "name": "Reviews",
	"class": "landing-section reviews-section",
    "settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Title"
		},
		{
			"type": "range",
			"id": "card_height",
			"label": "Card Height",
			"min": 350,
			"max": 550,
			"step": 10,
			"unit": "px",
			"default": 410
		},
		{
			"type": "range",
			"id": "card_height_mob",
			"label": "Card Height on mobile",
			"min": 350,
			"max": 550,
			"step": 10,
			"unit": "px",
			"default": 440
		}
	],
	"blocks": [
		{
			"type": "review",
			"name": "Review",
			"settings": [
				{
					"type": "image_picker",
					"id": "image",
					"label": "Country Image"
				},
				{
					"type": "text",
					"id": "author",
					"label": "Author"
				},
				{
					"type": "text",
					"id": "country",
					"label": "Country"
				},
				{
					"type": "richtext",
					"id": "title",
					"label": "Title"
				},
				{
					"type": "richtext",
					"id": "text",
					"label": "Text"
				},
				{
					"type": "text",
					"id": "rating_num",
					"label": "Rating",
					"default": "4.9"
				}
			]
		}
	]
  }
{% endschema %}
