<section class="contents">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2 class="contents-title">Contents</h2>
        <div class="contents-info">
          <ul class="first">
          {% for block in section.blocks %}  
           {% if block.type == 'text' %}
              <li>{{block.settings.content-number}} <a href="{{block.settings.content-link}}">{{block.settings.content-text}}</a></li>
            {% endif  %}
           {% endfor %}
          </ul>
          <ul class="second">
             {% for block in section.blocks %}  
             {% if block.type == 'text-1' %}
                <li>{{block.settings.content-number-1}} <a href="{{block.settings.content-link-1}}">{{block.settings.content-text-1}}</a></li>
              {% endif %}
             {% endfor %}
          </ul>
          <ul class="third">
              {% for block in section.blocks %}  
              {% if block.type == 'text-2' %}
                <li>{{block.settings.content-number-2}} <a href="{{ block.settings.content-link-2 }}">{{block.settings.content-text-2}}</a></li>
              {% endif %}
             {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
