<section class="red-carp">
<div class="container">
  <div class="row">
    <div class="col-md-6">
      
      <div class="red-img">
        {% if section.settings.logo_image !=blank %}
        <img src="{{ section.settings.logo_image | img_url: 'large' }}"> 
        {% endif %}
        {% if section.settings.img_text !=blank  %}
        <span class="red-carp-txt">{{ section.settings.img_text }}</span>
        {% endif %}
      </div>
     
    </div>
    <div class="col-md-6">
      <div class="red-con">
        {% if section.settings.heading !=blank  %}
        <h2>{{ section.settings.heading }}</h2>
        {% endif %}
        <p>{{ section.settings.first_text }}</p>
        <p>The ones that only the “rich and famous” can afford, performed by the best dermatologists, only available at exclusive clinics. <b>Now you can find out!</b></p>
      </div>
    </div>
  </div>
  <div class="row second">
    <div class="col-md-7 cus-order-2">
      <div class="red-con">
        <h2>{{ section.settings.heading_left }}</h2>
        {{ section.settings.text }}
        {{ section.settings.second }}
        {{ section.settings.third }}
      </div>
    </div>
    <div class="col-md-5 cus-order-1">
      <div class="red-img">
        {% if section.settings.logo_right !=blank %}
        <img src="{{ section.settings.logo_right |img_url:'large' }}">
        {% endif %}
        {% if section.settings.img_left !=blank %}
        <span class="red-carp-txt">{{ section.settings.img_left }}</span>
        {% endif %}
      </div>
    </div>
  </div>
</div>
</section>
{% schema %}
  {
    "name": "Red Crap",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo_image",
        "label": "Left Image"
      },
      {
        "type": "text",
        "id": "img_text",
        "label": "Image text"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading Right"
      },
      {
        "type": "textarea",
        "id": "first_text",
        "label": "Right First Text"
      },
      {
        "type": "richtext",
        "id": "second_text",
        "label": "Right Second Text"
      },
      {
        "type": "image_picker",
        "id": "logo_right",
        "label": "Right Image"
      },
      {
        "type": "text",
        "id": "img_left",
        "label": "Image text"
      },
      {
        "type": "text",
        "id": "heading_left",
        "label": "Heading Left"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Left First Text"
      },
      {
        "type": "richtext",
        "id": "second",
        "label": "Left Second Text"
      },
      {
        "type": "richtext",
        "id": "third",
        "label": "Left Second Text"
      }
    ],
    "presets":[
      {
        "name":"Red Crap"
      }
    ]
  }
{% endschema %}