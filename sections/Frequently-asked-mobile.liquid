{% schema %}
  {
    "name": "Skin Concerns Mobile",
    "class": "faq",
    "settings": [
     {
	"type":"text",
	"id":"main_tlt",
	"label":"Heading"
}
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Concerns",
        "settings": [
			{
	"type":"image_picker",
	"id":"sec_img_1",
