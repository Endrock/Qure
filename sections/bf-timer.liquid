</script>
{% schema %}
  {
    "name": "Black friday timer",
    "class": "bf-timer-section black-friday-section",
    "settings": [
      {
        "type": "richtext",
        "id": "timer-text",
        "label":"Timer Text"
      },
      {
        "type": "richtext",
        "id": "text-status",
        "label":"Timer Status"
      },
      {
        "type": "richtext",
        "id": "timer-text-end",
        "label":"Timer Text End"
      },
      {
        "type": "richtext",
        "id": "text-end",
        "label":"Timer End"
      }
    ]
  }
{% endschema %}
