<!-- /snippets/social-sharing.liquid -->
<div class="social-sharing">

  {% if settings.share_facebook %}
    <a class="social__url" target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
      {% comment %} {% include 'icon-facebook' %} {% endcomment %}
      {% comment %} <span aria-hidden="true">{{ 'general.social.share_on_facebook' | t }}</span>
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_facebook' | t }}</span> {% endcomment %}
   <span class="icon-facebook"></span>
    </a>
  {% endif %}

  {% if settings.share_twitter %}
    <a class="social__url" target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
      {% comment %} {% include 'icon-twitter' %} {% endcomment %}
      {% comment %} <span aria-hidden="true">{{ 'general.social.share_on_twitter' | t }}</span>
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_twitter' | t }}</span> {% endcomment %}
      <span class="icon-twitter"></span>
    </a>
  {% endif %}

  {% if settings.share_pinterest %}
    <a class="social__url" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}">
      {% comment %} {% include 'icon-pinterest' %} {% endcomment %}
      {% comment %} <span aria-hidden="true">{{ 'general.social.share_on_pinterest' | t }}</span>
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span> {% endcomment %}
      <span class="icon-pin"></span>
    </a>
  {% endif %}

</div>
